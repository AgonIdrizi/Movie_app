<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container-navbar">
    <%= link_to "Movie App", root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "Home", root_path %></li>
        <li><%= link_to "Help", help_path %></li>
        <% if user_signed_in? %>
          <li><%= link_to "New Movie", new_movie_path %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              Account <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Profile", current_user %></li>
              <li><%= link_to "Watched Movies", watched_user_path(current_user.id) %></li>
              <li><%= link_to "In watchlist movies", watchlist_user_path(current_user.id) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to "Log out", destroy_user_session_path %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to "Log in", new_user_session_path %></li>
          <li><%= link_to "Sign up", new_user_registration_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>