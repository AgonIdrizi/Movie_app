edit.html.erb
  <h1>Update  movie</h1>
<%= form_for @movie do |f| %>
  <p><%= f.label :movie_name %></p>
  <%= f.text_field :name %><br>

  <p><%= f.label :movie_description %></p>
  <%= f.text_area :description %><br>

   <%= f.fields_for :directors do |ff| %>
   <p><%= ff.label :Director_name %></p>
     <%= ff.text_field :name %>
   <% end %><br>
   <%= f.fields_for :actors do |ff| %>
     <p class='actor-name'><%= ff.label :actor_name %><p>
     <p class='actor-field'><%= ff.text_field :name %></p>
   <% end %><br>

   <%= f.file_field :picture, accept: 'image/jpeg,image/png'  %><br>

   <%= f.submit 'Update Movie', class: "btn btn-primary" %>

<% end %>

<script type="text/javascript">
  $('#movie_picture').bind('change', function() {
    var size_in_megabytes = this.files[0].size/1024/1024;
    if (size_in_megabytes > 5) {
      alert('Maximum file size is 5MB. Please choose a smaller file.');
    }
  });
</script>
